---
import { MarkdownInstance } from '../../node_modules/astro/dist/@types/astro';

export interface ProjectMarkdown {
  title: string,
  description: string,
  publishDate: string
}

export interface Props {
  href: string,
  project: MarkdownInstance<ProjectMarkdown>
}

const {href, project} = Astro.props
---

<div class="project-box">
  <h2>
    <a href={href}>
      {project.frontmatter.title}
    </a>
  </h2>
  <p class="project-description">{project.frontmatter.description}</p>
  <div class="project-footer"> 
    <span class="project-date">â€” {project.frontmatter.publishDate}</span>
  </div>
</div>

<style>
  h2, .project-footer{
    font-family: var(--font-family-sans);
    font-weight: 700;
    margin: auto
  }

  .project-date {
    color: var(--text-secondary);
    text-align: left;
    text-transform: uppercase;
    margin-right: 16px;
  }
  

  .project-box {
    background-color: var(--background-secondary);
    border-radius: 15px;
    padding: 1rem;
  }
</style>
