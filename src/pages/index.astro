---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Alex Bolduc - Software Engineer";
const description = "Alex Bolduc";
const permalink = Astro.site?.href ?? "/";
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1>Alex Bolduc</h1>
      <p>Backend engineer developing efficient software solutions</p>
    </div>

    <div class="hero-image-container">
      <picture>
        <source
          srcset="/assets/images/heroIllustration.svg"
          media="(min-width: 600px)"
        />
        <img
          class="hero-image"
          alt="Illustration of a cartoon robot behind a laptop"
          src="/assets/images/heroIllustration.svg"
          width="550"
          height="466"
        />
      </picture>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .hero-image {
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
